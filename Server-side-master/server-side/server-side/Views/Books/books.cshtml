

@{
    ViewBag.Title = "books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/content/index.css" rel="stylesheet" />



    <div class="panel panel-default">
    <!-- Default panel contents -->
    <div id="panelHeading" class="panel-heading">Books</div>
    <!-- Table -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Pages</th>
                <th>Publication year</th>
                <th>ISBN</th>
            </tr>
        </thead>
        @*@Url.Action("authors", "Authors")*@
       
        <tbody>
            
                @foreach (service.Models.Books books in service.Models.Books.getBookList())
                {

                    <tr class="clickable-row" onclick="document.location = '@Url.Action("bookDetails", "Books", new {isbn = @books._ISBN})'">
                        <td>@books._title</td>
                        <td>@books._publicationInfo</td>
                        <td>@books._pages</td>
                        <td>@books._publicationYear</td>
                        <td>@books._publicationYear</td>

                    </tr>
                    
                }
           
                </tbody>

    </table>
</div>