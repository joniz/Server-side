@model service.Models.viewModel



@if (ViewBag.ErrorDan != null)
{
    <h2 class="alert alert-danger" role="alert">@ViewBag.ErrorDan</h2>
}
@if (ViewBag.ErrorWar != null)
{
    <h2 class="alert alert-warning" role="alert">@ViewBag.ErrorWar</h2>
}
@using (Html.BeginForm("editBook", "Books", FormMethod.Post))
{
<form>
    <div class="form-group">
        <label name ="ISBN">Titel of book: <small>@Model.book.Title </small></label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter text" name="title">
        
    </div>
    
        <div class="form-group">

            <label>
                Author(s):
                @foreach (var author in Model.book.AUTHORs)
                {
                    <small>[@author.LastName, @author.FirstName]</small>
                }
            </label>

            <label for="exampleInputPassword1"></label>
            <div id="authorDiv">
                <select class="form-control" name="aID" id="authorSelect">
                    @foreach (var author in Model.authorList)
                {
                        <option value="@author.Aid">@author.FirstName @author.LastName</option>

                    }
                </select>


            </div>
        
        <button  id="addDiv"  class="glyphicon glyphicon-plus" type="button"></button>
    </div>
    <label>ISBN:</label>
    <div class="form-group">
        <input type="text" name="ISBN" value="@Model.book.ISBN" readonly />


    </div>
    <div class="form-group">
        <label>Publication year: <small>@Model.book.PublicationYear</small></label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter text" name="publicationYear">

    </div>
    <div class="form-group">
        <label>Publication info: <small>@Model.book.PublicationInfo</small></label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter text" name="publicationInfo">

    </div>
    <div class="form-group">
        <label>Pages: <small>@Model.book.pages</small></label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter text" name="pages">

    </div>
    <div class="form-group">
        <label>Classification: <small>@Model.book.CLASSIFICATION.Signum</small></label>
        <select class="form-control" name="signId">
            @foreach (var signum in Model.classificationList)
                {
                <option value="@signum.SignId">@signum.Signum</option>
                }
        </select>

    </div>
    <div class="form-group">
        <label for="comment">Publication info</label>
        <textarea class="form-control" rows="5" id="comment" name="publicationInfo"></textarea>
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        console.log("ready!");
        $("#addDiv").click(function () {
            $('#authorSelect').clone().appendTo("#authorDiv");
        });

    });
</script>