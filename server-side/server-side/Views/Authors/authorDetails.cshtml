
@{
    ViewBag.Title = "authorDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (service.Models.Author author in service.Models.Author.getAuthorList())
{
    if (author._aId == @ViewBag.aId)
    {

        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">@author._firstName @author._lastName</div>
                <div class="panel-body">

                    <small>Birth year: @author._birthYear</small>
                    <br />
                    <small>unique ID: @author._aId</small>
                </div>
            </div>
        </div>


    }


}

